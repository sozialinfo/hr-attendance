<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_hr_attendance_employee_kanban" model="ir.ui.view">
        <field name="name">hr.attendance.employee.kanban</field>
        <field name="model">hr.employee.public</field>
        <field name="arch" type="xml">
            <kanban
                class="o_kanban_mobile"
                js_class="hr_employee_attendance_kanban"
                sample="1"
                group_create="0"
                create="0"
                archivable="0"
                default_group_by="attendance_type_id"
                default_order="is_cur_user desc, name asc"
                action="action_edit_check_in"
                type="object"
            >
                <field name="id" />
                <field name="user_id" />
                <field name="user_partner_id" />
                <field name="is_cur_user" />
                <field name="image_128" />
                <field name="attendance_type_id" />
                <field name="last_attendance_id" />
                <field name="last_check_in" />
                <field name="last_check_out" />
                <field name="last_attendance_comment" />
                <field name="attendance_state" />
                <field name="break_start_time" />
                <progressbar field="attendance_type_id" colors='{}' />
                <templates>
                    <t t-name="kanban-box">
                        <div
                            t-attf-class="{{record.user_id.raw_value == context.uid ? 'o_hr_kanban_own_employee' : ''}} oe_kanban_global_click o_kanban_record_has_image_fill o_hr_kanban_record"
                        >
                            <field
                                name="image_1024"
                                class="o_kanban_image_fill_left d-block"
                                preview_image="image_128"
                                widget="background_image"
                                options="{'zoom': true, 'zoom_delay': 1000}"
                            />

                            <div
                                class="ribbon ribbon-top-right"
                                attrs="{'invisible': [('break_start_time', '=', False)]}"
                            >
                                <span class="bg-odoo">On Break</span>
                            </div>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field
                                                name="name"
                                                placeholder="Employee's Name"
                                            />
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <ul>
                                        <li
                                            t-if="record.attendance_state.raw_value != 'checked_out'"
                                        >
                                            <i
                                                class="fa fa-sign-in mt-1 me-1"
                                                title="Checked In"
                                            />
                                            <field name="last_check_in" />
                                        </li>
                                        <li
                                            t-if="record.attendance_state.raw_value == 'checked_in' and record.break_start_time.raw_value != false"
                                        >
                                            <i
                                                class="fa fa-coffee mt-1 me-1"
                                                title="On Break"
                                            />
                                            <field name="break_start_time" />
                                        </li>

                                        <li
                                            t-if="record.attendance_state.raw_value != 'checked_out'"
                                            class="o_text_overflow"
                                        >
                                            <field name="last_attendance_comment" />
                                        </li>
                                    </ul>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left" />
                                    <div class="oe_kanban_bottom_right">
                                        <button
                                            t-if="record.attendance_state.raw_value == 'checked_in' and record.break_start_time.raw_value == false"
                                            class="btn o_kanban_pause_button fa fa-pause-circle"
                                            title="Start Break"
                                            name="action_break_wizard"
                                            type="object"
                                            groups="hr_attendance.group_hr_attendance_user"
                                        />
                                        <button
                                            t-if="record.attendance_state.raw_value == 'checked_in'
                                             and record.break_start_time.raw_value == false
                                             and record.user_id.raw_value == context.uid"
                                            class="btn o_kanban_pause_button fa fa-pause-circle"
                                            title="Start Break"
                                            name="action_break_wizard"
                                            type="object"
                                            groups="!hr_attendance.group_hr_attendance_user"
                                        />
                                        <button
                                            t-if="record.attendance_state.raw_value == 'checked_in' and record.break_start_time.raw_value != false"
                                            class="btn o_kanban_play_button fa fa-play-circle"
                                            title="End Break"
                                            name="action_break_wizard"
                                            type="object"
                                            groups="hr_attendance.group_hr_attendance_user"
                                        />
                                        <button
                                            t-if="record.attendance_state.raw_value == 'checked_in'
                                             and record.break_start_time.raw_value != false
                                             and record.user_id.raw_value == context.uid"
                                            class="btn o_kanban_play_button fa fa-play-circle"
                                            title="End Break"
                                            name="action_break_wizard"
                                            type="object"
                                            groups="!hr_attendance.group_hr_attendance_user"
                                        />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_hr_attendance_employee_search" model="ir.ui.view">
        <field name="name">hr.attendance.employee.search</field>
        <field name="mode">primary</field>
        <field name="model">hr.employee.public</field>
        <field name="inherit_id" ref="hr.hr_employee_public_view_search" />
        <field name="arch" type="xml">
            <xpath expr="filter[@name='my_team']" position="before">
                <filter
                    name="filter_cur_user"
                    string="Current User"
                    domain="[('is_cur_user', '=', True)]"
                />
                <separator />
                <filter
                    name="filter_on_break"
                    string="On Break"
                    domain="[('break_start_time', '!=', False)]"
                />
                <separator />
            </xpath>
        </field>
    </record>

    <record id="action_hr_attendance_employee_kanban" model="ir.actions.act_window">
        <field name="name">Employees Kanban</field>
        <field name="res_model">hr.employee.public</field>
        <field name="view_mode">kanban</field>
        <field name="domain">[("is_kanban_attendance", "=", True)]</field>
        <field name="view_id" ref="view_hr_attendance_employee_kanban" />
        <field name="search_view_id" ref="view_hr_attendance_employee_search" />
    </record>

    <menuitem
        id="menu_hr_attendance_employee_kanban"
        name="Employees Kanban"
        parent="hr_attendance.menu_hr_attendance_root"
        sequence="0"
        groups="hr_attendance.group_hr_attendance"
        action="action_hr_attendance_employee_kanban"
    />
</odoo>
